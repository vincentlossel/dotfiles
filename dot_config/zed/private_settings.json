{
    // UI
    "theme": "JetBrains New Dark",
    "tab_size": 4,
    "ui_font_size": 14.5,
    "buffer_font_size": 14.5,
    "buffer_font_family": "JetBrains Mono",
    "buffer_font_features": {
        "calt": false
    },
    "indent_guides": {
        "enabled": true,
        "line_width": 2,
        "active_line_width": 2,
        "coloring": "fixed",
        "background_coloring": "disabled"
    },
    "tab_bar": {
        "show": true
    },
    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": true
    },
    "show_copilot_suggestions": false,
    "cursor_blink": false,
    "relative_number_lines": true,
    "scrollbar": {
        "show": "never"
    },
    "project_panel": {
        "button": true,
        "dock": "left",
        "git_status": true,
        "show_diagnostics": "all"
    },
    "outline_panel": {
        "dock": "right"
    },
    "collaboration_panel": {
        "button": false,
        "dock": "right"
    },
    "chat_panel": {
        "button": false
    },
    // Editor
    "base_keymap": "VSCode",
    "autosave": "on_focus_change",
    "format_on_save": "on",
    "preferred_line_length": 110,
    "vertical_scroll_margin": 0,
    "soft_wrap": "preferred_line_length",
    "use_autoclose": true,
    "features": {
        "inline_completion_provider": "none",
        "copilot": false
    },
    // Vim
    "vim_mode": true,
    "vim": {
        "use_system_clipboard": "always",
        "use_multiline_find": true
    },
    // Terminal
    "terminal": {
        "alternate_scroll": "off",
        "blinking": "terminal_controlled",
        "copy_on_select": true,
        "font_family": "JetBrains Mono",
        "font_size": 14.5,
        "font_features": null,
        "line_height": "standard",
        "toolbar": {
            "title": true
        },
        "working_directory": "current_project_directory",
        "dock": "right",
        "detect_venv": {
            "on": {
                "directories": [
                    ".env",
                    "env",
                    ".venv",
                    "venv"
                ],
                "activate_script": "default"
            }
        }
    },
    // AI
    "assistant": {
        "default_model": {
            "provider": "zed.dev",
            "model": "claude-3-5-sonnet-latest"
        },
        "version": "2",
        "provider": null
    },
    // Git
    "git": {
        "inline_blame": {
            "enabled": true,
            "delay_ms": 500
        }
    },
    // LSP & Languages
    "formatter": "language_server",
    "file_types": {
        "Dockerfile": [
            "Dockerfile",
            "Dockerfile.*"
        ],
        "JSON": [
            "json",
            "jsonc",
            "*.code-snippets"
        ]
    },
    "file_scan_exclusions": [
        // Default
        "**/out",
        "**/dist",
        "**/.husky",
        "**/.turbo",
        "**/.vscode-test",
        "**/.vscode",
        "**/.next",
        "**/.storybook",
        "**/.tap",
        "**/.nyc_output",
        "**/report",
        "**/node_modules",
        // Custom
        "**/.git",
        "**/.svn",
        "**/.DS_Store",
        "**/Thumbs.db"
    ],
    "languages": {
        // TypeScript Setup
        "TypeScript": {
            "inlay_hints": {
                "enabled": true,
                "show_parameter_hints": true,
                "show_other_hints": true,
                "show_type_hints": true
            }
        },
        // Python Setup
        "Python": {
            "tab_size": 4,
            "hard_tabs": true,
            "formatter": {
                "language_server": {
                    "name": "ruff"
                }
            },
            "format_on_save": {
                "language_server": {
                    "name": "ruff"
                }
            },
            "language_servers": [
                "pyright",
                "ruff"
            ]
        }
    },
    "lsp": {
        "tailwindcss-language-server": {
            "settings": {
                "classAttributes": [
                    "class",
                    "className",
                    "ngClass",
                    "styles"
                ]
            }
        }
    },
    // Telemetry
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    }
}
